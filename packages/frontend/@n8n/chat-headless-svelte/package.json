{
  "name": "@n8n/chat-headless-svelte",
  "version": "0.1.0",
  "description": "Headless Svelte chat library based on @n8n/chat with full styling control via snippets",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && pnpm build:types",
    "build:types": "tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "test": "vitest run",
    "test:dev": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --quiet",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/chat-headless-svelte.umd.js",
  "module": "./dist/chat-headless-svelte.es.js",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/chat-headless-svelte.es.js",
      "require": "./dist/chat-headless-svelte.umd.js"
    },
    "./*": {
      "import": "./*",
      "require": "./*"
    }
  },
  "dependencies": {
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@n8n/eslint-config": "workspace:*",
    "@n8n/typescript-config": "workspace:*",
    "@n8n/vitest-config": "workspace:*",
    "@sveltejs/vite-plugin-svelte": "^5.0.4",
    "@tsconfig/svelte": "^5.0.4",
    "@vitest/coverage-v8": "3.2.4",
    "svelte": "^5.23.1",
    "svelte-check": "^4.1.1",
    "typescript": "5.9.2",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "files": [
    "README.md",
    "dist"
  ]
}
